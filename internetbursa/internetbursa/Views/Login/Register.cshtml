@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kayıt Ol</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">
    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="card shadow-sm p-4" style="width: 100%; max-width: 400px;">
            <h3 class="text-center text-success">Kayıt Ol</h3>
            <form action="/Login/Register" method="post">
                <div class="form-group mb-3">
                    <label for="Username">E-posta</label>
                    <input type="email" id="Username" name="Username" class="form-control" placeholder="E-posta" required>
                </div>
                <div class="form-group mb-3">
                    <label for="Password">Şifre</label>
                    <input type="password" id="Password" name="Password" class="form-control" placeholder="Şifre" required>
                </div>
                <div class="form-group mb-3">
                    <label for="FullName">Ad Soyad</label>
                    <input type="text" id="FullName" name="FullName" class="form-control" placeholder="Ad Soyad" required>
                </div>
                @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage as string))
                {
                    <div class="text-danger mb-3">@ViewBag.ErrorMessage</div>
                }
                <button type="submit" class="btn btn-success btn-block">Kayıt Ol</button>
            </form>
            <div class="mt-3 text-center">
                Zaten bir hesabınız var mı? <a href="/Login" class="text-success">Giriş Yap</a>
            </div>
        </div>
    </div>
</body>
</html>


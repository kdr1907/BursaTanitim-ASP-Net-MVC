<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 23210201026</title>
    

    <link href="~/Content/layout.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-success">
        <div class="container">
            @Html.ActionLink("Anasayfa", "Index", "Home", new { area = "" }, new { @class = "navbar-brand text-white" })
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    @if (Session["UserID"] != null)
                    {
                        <!-- Normal kullanıcı menüleri -->
                        <li class="nav-item">
                            @Html.ActionLink("Turistik Yerler", "TouristPlaces", "Home", new { area = "" }, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Nüfus Dağılımı", "PopulationDistribution", "Home", new { area = "" }, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("İlçeler", "Districts", "Home", new { area = "" }, new { @class = "nav-link" })
                        </li>

                        <!-- Admin kullanıcılar için Yönetim Paneli -->
                        if (Session["UserRole"] != null && Session["UserRole"].ToString() == "Admin")
                        {
                            <li class="nav-item">
                                @Html.ActionLink("TYPanel", "Index", "AdminPanel", new { area = "" }, new { @class = "nav-link" } )
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("İPanel", "Districts", "AdminPanel", new { area = "" }, new { @class = "nav-link" })
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Npanel", "Population", "AdminPanel", new { area = "" }, new { @class = "nav-link" })
                            </li>
                        }
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container py-5">
        @RenderBody()
        <hr />
        <footer class="text-center py-4">
            <p>&copy; @DateTime.Now.Year - Bursa Tanıtım Sitesi</p>
        </footer>
    </div>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.7.0.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
